                    <fa:FontAwesome Icon="Envelope" FontSize="25" Foreground="#FFA9A9A9" HorizontalAlignment="Left" Margin="640,20,0,15" Width="auto"/>
                    <fa:FontAwesome Icon="Expand"  FontSize="25" Foreground="#FFA9A9A9" HorizontalAlignment="Left" Margin="540,20,0,15" Width="auto"/>

                </Grid>
                <Border CornerRadius="10" Grid.Column="1"  HorizontalAlignment="Left" Height="190" Margin="25,120,0,0" 
                  VerticalAlignment="Top" Width="290"   Cursor="Hand">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="1"/>
                            <GradientStop Color="#FFE37C0F"/>
                            <GradientStop Color="#FFE60648" Offset="0.993"/>
                            <GradientStop Color="#FFFF0B41" Offset="0.345"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBox Foreground="White" FontWeight="SemiBold" FontSize="40" Background="Transparent"  BorderBrush="Transparent" HorizontalAlignment="Left" Height="65"  TextWrapping="Wrap" Text="$86,0000" VerticalAlignment="Top" Width="200" Margin="60,65,0,0"/>
