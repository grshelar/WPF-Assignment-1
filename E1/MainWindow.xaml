                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="David Gray.."  FontSize="20" Height="72" Margin="-150" HorizontalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" Width="136"/>
