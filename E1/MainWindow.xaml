                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="371*"/>
                                <ColumnDefinition Width="551*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid x:Name="tables"  BorderBrush="Transparent" FontSize="25" Margin="42,-18,230,2" Grid.ColumnSpan="2">
