                    <Grid Margin="-15,0,740,0" Background="Transparent">
                        <TextBlock Margin="40,0,48,0" Foreground="#b0b9c6" IsHitTestVisible="False"
                          FontSize="20" Background="Transparent"     Panel.ZIndex="1" Text="       search Project...." Height="30" VerticalAlignment="Center" Cursor="Hand"/>
